<main class="w-full bg-gray-900 text-gray-100 min-h-screen">
    <section class="max-w-2xl mx-auto px-4 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-teal-400 mb-2 flex items-center gap-2">
                <i class="fas fa-user-plus"></i> Agregar usuario
            </h1>
            <p class="text-gray-400">Crea un nuevo usuario para el sistema</p>
        </div>
        <div class="bg-gray-800 rounded-xl p-8 border border-gray-700 shadow-lg">
            <form action="/users/add" method="POST" class="space-y-6">
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="bg-red-900/50 text-red-300 px-4 py-3 rounded-md border border-red-700">
                        <%= error %>
                    </div>
                <% } %>
                <div>
                    <label for="name" class="flex text-sm font-medium text-gray-300 mb-2 items-center gap-1">
                        <i class="fas fa-user"></i> Nombre
                    </label>
                    <input type="text" id="name" name="name" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-gray-100" placeholder="Nombre completo">
                </div>
                <div>
                    <label for="email" class="flex text-sm font-medium text-gray-300 mb-2 items-center gap-1">
                        <i class="fas fa-envelope"></i> Correo electrónico
                    </label>
                    <input type="email" id="email" name="email" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-gray-100" placeholder="tucorreo@ejemplo.com">
                </div>
                <div>
                    <label for="password" class="flex text-sm font-medium text-gray-300 mb-2 items-center gap-1">
                        <i class="fas fa-key"></i> Contraseña
                    </label>
                    <input type="password" id="password" name="password" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-gray-100" placeholder="••••••••">
                </div>
                <div>
                    <label for="role" class="flex text-sm font-medium text-gray-300 mb-2 items-center gap-1">
                        <i class="fas fa-user-tag"></i> Rol
                    </label>
                    <select id="role" name="role" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-gray-100">
                        <option value="admin">Administrador</option>
                        <option value="librarian">Bibliotecario</option>
                        <option value="user" selected>Usuario</option>
                    </select>
                </div>
                <div class="flex justify-between mt-8">
                    <a href="/users" class="inline-block bg-gray-700 hover:bg-gray-600 text-gray-300 font-medium py-2 px-6 rounded-lg transition-colors duration-300">Volver</a>
                    <button type="submit" class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-8 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30 flex items-center gap-2">
                        <i class="fas fa-user-plus"></i> Agregar usuario
                    </button>
                </div>
            </form>
        </div>
    </section>
</main>