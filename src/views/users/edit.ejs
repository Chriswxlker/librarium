<main class="w-full bg-gray-900 text-gray-100 min-h-screen">
    <section class="max-w-2xl mx-auto px-4 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-teal-400 mb-2 flex items-center gap-2">
                <i class="fas fa-user-edit"></i> Editar usuario
            </h1>
            <p class="text-gray-400">Modifica los datos del usuario seleccionado</p>
        </div>
        <div class="bg-gray-800 rounded-xl p-8 border border-gray-700 shadow-lg">
            <form action="/users/edit/<%= user.id %>" method="POST" class="space-y-6">
                <div>
                    <label for="name" class="flex text-sm font-medium text-gray-300 mb-2 items-center gap-1">
                        <i class="fas fa-user"></i> Nombre
                    </label>
                    <input type="text" id="name" name="name" value="<%= user.name %>" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-gray-100">
                </div>
                <div>
                    <label for="email" class="flex text-sm font-medium text-gray-300 mb-2 items-center gap-1">
                        <i class="fas fa-envelope"></i> Correo electr√≥nico
                    </label>
                    <input type="email" id="email" name="email" value="<%= user.email %>" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-gray-100">
                </div>
                <div>
                    <label for="role" class="flex text-sm font-medium text-gray-300 mb-2 items-center gap-1">
                        <i class="fas fa-user-tag"></i> Rol
                    </label>
                    <select id="role" name="role" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-gray-100">
                        <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Administrador</option>
                        <option value="bibliotecario" <%= user.role === 'bibliotecario' ? 'selected' : '' %>>Bibliotecario</option>
                        <option value="usuario" <%= user.role === 'usuario' ? 'selected' : '' %>>Usuario</option>
                    </select>
                </div>
                <div>
                    <label for="status" class="flex text-sm font-medium text-gray-300 mb-2 items-center gap-1">
                        <i class="fas fa-toggle-on"></i> Estado
                    </label>
                    <select id="status" name="status" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-gray-100">
                        <option value="1" <%= user.status === 1 ? 'selected' : '' %>>Activo</option>
                        <option value="0" <%= user.status === 0 ? 'selected' : '' %>>Inactivo</option>
                    </select>
                </div>
                <div class="flex justify-between mt-8">
                    <a href="/users" class="inline-block bg-gray-700 hover:bg-gray-600 text-gray-300 font-medium py-2 px-6 rounded-lg transition-colors duration-300">Volver</a>
                    <button type="submit" class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-8 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30 flex items-center gap-2">
                        <i class="fas fa-save"></i> Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </section>
</main>