<main class="w-full bg-gray-900 text-gray-100 min-h-screen">
    <section class="max-w-6xl mx-auto px-4 py-8">
        <div>
            <h1 class="text-3xl font-bold text-teal-400 mb-2">Libros</h1>
            <p class="text-gray-400">Gestión completa del catálogo de libros</p>
        </div>
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4 mb-6 bg-gray-800 rounded-lg p-4 border border-gray-700">
            <div class="text-sm text-gray-400">
                Mostrando <%= books.length %> libros
            </div>
            <div class="flex gap-3">
                <a href="/books/inactive" class="inline-flex items-center gap-2 bg-gray-700 hover:bg-gray-600 text-gray-100 font-medium py-2 px-4 rounded-lg transition-colors duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.293 9.293a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L13 12.414V17a1 1 0 11-2 0v-4.586l-3.293 3.293a1 1 0 01-1.414-1.414l4-4z" clip-rule="evenodd" />
                    </svg>
                    Recuperar
                </a>
                <a href="/books/add" class="inline-flex items-center gap-2 bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-6 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                    </svg>
                    Agregar libro
                </a>
            </div>
        </div>
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 shadow-lg overflow-x-auto">
            <table class="w-full min-w-max" id="books-table">
                <thead class="border-b border-gray-700">
                    <tr class="text-left">
                        <th class="py-3 px-4 text-teal-300 font-semibold">ID</th>
                        <th class="py-3 px-4 text-teal-300 font-semibold">Nombre</th>
                        <th class="py-3 px-4 text-teal-300 font-semibold">Autor</th>
                        <th class="py-3 px-4 text-teal-300 font-semibold">Categoría</th>
                        <th class="py-3 px-4 text-teal-300 font-semibold">Editorial</th>
                        <th class="py-3 px-4 text-teal-300 font-semibold">ISBN</th>
                        <th class="py-3 px-4 text-teal-300 font-semibold">Año</th>
                        <th class="py-3 px-4 text-teal-300 font-semibold">Páginas</th>
                        <th class="py-3 px-4 text-teal-300 font-semibold">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach(book => { %>
                        <tr class="border-b border-gray-700 hover:bg-gray-700/30 transition-colors">
                            <td class="py-2 px-4"><%= book.id_book %></td>
                            <td class="py-2 px-4"><%= book.name %></td>
                            <td class="py-2 px-4"><%= book.author %></td>
                            <td class="py-2 px-4"><%= book.category %></td>
                            <td class="py-2 px-4"><%= book.publisher %></td>
                            <td class="py-2 px-4"><%= book.isbn %></td>
                            <td class="py-2 px-4"><%= book.year_published %></td>
                            <td class="py-2 px-4"><%= book.num_pages %></td>
                            <td class="py-2 px-4 flex gap-2">
                                <a href="/books/edit/<%= book.id_book %>" class="bg-teal-600 hover:bg-teal-500 text-white px-3 py-1 rounded transition-colors">Editar</a>
                                <form action="/books/deactivate/<%= book.id_book %>" method="POST" class="inline">
                                    <button type="submit" class="bg-gray-700 hover:bg-red-600 text-white px-3 py-1 rounded transition-colors">Desactivar</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <!-- Paginación -->
        <div class="flex justify-center mt-8">
            <ul class="inline-flex -space-x-px">
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <li>
                        <a href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="px-4 py-2 border border-gray-700 bg-gray-800 text-gray-300 hover:bg-teal-600 hover:text-white rounded-l-lg <%= page === i ? 'bg-teal-600 text-white' : '' %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </div>
    </section>
</main>
