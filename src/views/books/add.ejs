<main class="w-full bg-gray-900 text-gray-100 min-h-screen">
    <section class="max-w-xl mx-auto px-4 py-12">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-teal-400 mb-6 flex items-center gap-2">
                <i class="fas fa-plus"></i> Agregar Libro
            </h1>
        </div>
        <div class="bg-gray-800 rounded-xl p-8 border border-gray-700 shadow-lg">
            <form action="/books/add" method="POST" class="space-y-6">
                <div>
                    <label for="name" class="flex text-teal-300 font-medium mb-2 items-center gap-1">
                        <i class="fas fa-book"></i> Nombre:
                    </label>
                    <input type="text" name="name" id="name" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 text-gray-100 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent">
                </div>
                <div>
                    <label for="id_author" class="flex text-teal-300 font-medium mb-2 items-center gap-1">
                        <i class="fas fa-user-edit"></i> Autor:
                    </label>
                    <select name="id_author" id="id_author" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 text-gray-100">
                        <option value="">Seleccione un autor</option>
                        <% authors.forEach(author => { %>
                            <option value="<%= author.id_author %>"><%= author.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label for="isbn" class="flex text-teal-300 font-medium mb-2 items-center gap-1">
                        <i class="fas fa-barcode"></i> ISBN:
                    </label>
                    <input type="text" name="isbn" id="isbn" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 text-gray-100">
                </div>
                <div class="flex gap-4">
                    <div class="w-1/2">
                        <label for="year_published" class="flex text-teal-300 font-medium mb-2 items-center gap-1">
                            <i class="fas fa-calendar-alt"></i> Año de publicación:
                        </label>
                        <input type="number" name="year_published" id="year_published" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 text-gray-100">
                    </div>
                    <div class="w-1/2">
                        <label for="num_pages" class="flex text-teal-300 font-medium mb-2 items-center gap-1">
                            <i class="fas fa-file-alt"></i> Páginas:
                        </label>
                        <input type="number" name="num_pages" id="num_pages" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 text-gray-100">
                    </div>
                </div>
                <div>
                    <label for="id_category" class="flex text-teal-300 font-medium mb-2 items-center gap-1">
                        <i class="fas fa-tags"></i> Categoría:
                    </label>
                    <select name="id_category" id="id_category" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 text-gray-100">
                        <option value="">Seleccione una categoría</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id_category %>"><%= category.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label for="id_publisher" class="flex text-teal-300 font-medium mb-2 items-center gap-1">
                        <i class="fas fa-building"></i> Editorial:
                    </label>
                    <select name="id_publisher" id="id_publisher" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 text-gray-100">
                        <option value="">Seleccione una editorial</option>
                        <% publishers.forEach(publisher => { %>
                            <option value="<%= publisher.id_publisher %>"><%= publisher.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="flex justify-between mt-8">
                    <a href="/books" class="inline-block bg-gray-700 hover:bg-gray-600 text-gray-300 font-medium py-2 px-6 rounded-lg transition-colors duration-300">Volver</a>
                    <button type="submit" class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-8 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30">Agregar</button>
                </div>
            </form>
        </div>
    </section>
</main>
