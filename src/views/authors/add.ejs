<main class="w-full bg-gray-900 text-gray-100">
    <section class="max-w-6xl mx-auto px-4 py-12">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-teal-400 mb-6">Agregar autor</h1>
        </div>
        
        <div class="bg-gray-800 rounded-xl p-8 border border-gray-700 shadow-lg max-w-2xl mx-auto">
            <form action="/authors/add" method="POST" class="space-y-6">
                <div>
                    <label for="name" class="block text-teal-300 font-medium mb-2">Nombre:</label>
                    <input 
                        type="text" 
                        name="name" 
                        id="name" 
                        required 
                        class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 text-gray-100 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                    >
                </div>
                
                <div class="flex justify-between mt-8">
                    <a href="/authors" class="inline-block bg-gray-700 hover:bg-gray-600 text-gray-300 font-medium py-2 px-6 rounded-lg transition-colors duration-300">
                        Volver
                    </a>
                    <button 
                        type="submit" 
                        class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-8 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30"
                    >
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </section>
</main>
