<h1>Autores</h1>
<a href="/authors/add">Agregar autor</a>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% authors.forEach(author => { %>
            <tr>
                <td><%= author.id_author %></td>
                <td><%= author.name %></td>
                <td>
                    <a href="/authors/edit/<%= author.id_author %>">Editar</a>
                    <form action="/authors/delete/<%= author.id_author %>" method="POST" style="display:inline;">
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>