<aside id="sidebar" class="hidden md:block w-64 bg-gray-950 border-r border-gray-800 fixed h-screen z-30 transition-all duration-300">
    <!-- Botón de cierre para móviles -->
    <div class="p-4 border-b border-gray-800 flex justify-between items-center">
        <h2 class="text-xl font-bold text-teal-400">
            <i class="fas fa-book-open mr-2"></i>Librarium
        </h2>
        <button onclick="toggleSidebar()" class="md:hidden text-gray-400 hover:text-teal-400">
            <i class="fas fa-times"></i>
        </button>
    </div>
    
    <!-- Menú de navegación -->
    <nav class="p-4 overflow-y-auto h-[calc(100%-120px)]">
        <ul class="space-y-2">
            <li>
                <a href="/dashboard" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-teal-400 transition-colors duration-300 <%= pagina === 'dashboard' ? 'bg-gray-800 text-teal-400' : '' %>">
                    <i class="fas fa-tachometer-alt w-5 text-center"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            
            <li>
                <a href="/books" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-teal-400 transition-colors duration-300 <%= pagina === 'books' ? 'bg-gray-800 text-teal-400' : '' %>">
                    <i class="fas fa-book w-5 text-center"></i>
                    <span>Libros</span>
                </a>
            </li>
            
            <li>
                <a href="/authors" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-teal-400 transition-colors duration-300 <%= pagina === 'authors' ? 'bg-gray-800 text-teal-400' : '' %>">
                    <i class="fas fa-user-edit w-5 text-center"></i>
                    <span>Autores</span>
                </a>
            </li>
            
            <li>
                <a href="/publishers" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-teal-400 transition-colors duration-300 <%= pagina === 'publishers' ? 'bg-gray-800 text-teal-400' : '' %>">
                    <i class="fas fa-building w-5 text-center"></i>
                    <span>Editoriales</span>
                </a>
            </li>
            
            <li>
                <a href="/categories" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-teal-400 transition-colors duration-300 <%= pagina === 'categories' ? 'bg-gray-800 text-teal-400' : '' %>">
                    <i class="fas fa-tags w-5 text-center"></i>
                    <span>Categorías</span>
                </a>
            </li>
            
            <li class="border-t border-gray-800 my-2"></li>
            
            <% if (user && user.role === 'admin') { %>
            <li>
                <a href="/users" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-teal-400 transition-colors duration-300 <%= pagina === 'users' ? 'bg-gray-800 text-teal-400' : '' %>">
                    <i class="fas fa-users-cog w-5 text-center"></i>
                    <span>Usuarios</span>
                </a>
            </li>
            <% } %>
            
            <li>
                <a href="/loans" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-teal-400 transition-colors duration-300 <%= pagina === 'loans' ? 'bg-gray-800 text-teal-400' : '' %>">
                    <i class="fas fa-book-reader w-5 text-center"></i>
                    <span>Préstamos</span>
                </a>
            </li>
            
            <li class="border-t border-gray-800 my-2"></li>
            
            <li>
                <a href="/profile" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-gray-800 hover:text-teal-400 transition-colors duration-300 <%= pagina === 'profile' ? 'bg-gray-800 text-teal-400' : '' %>">
                    <i class="fas fa-user-circle w-5 text-center"></i>
                    <span>Mi Perfil</span>
                </a>
            </li>
        </ul>
    </nav>
    
    <!-- Pie del sidebar -->
    <div class="absolute bottom-0 w-full p-4 border-t border-gray-800">
        <div class="text-sm text-gray-500">Admin Panel v1.0</div>
