<header class="bg-gray-950 text-gray-100 shadow-lg border-b border-gray-800">
    <nav class="container mx-auto px-6 py-4">
        <div class="flex justify-between items-center">
            <div class="flex items-center">
                <% if (user && user.role === 'admin') { %>
                    <button onclick="toggleSidebar()" class="mr-4 text-gray-400 hover:text-teal-400 md:hidden">
                        <i class="fas fa-bars"></i>
                    </button>
                <% } %>
                <a href="<%= user ? '/dashboard' : '/' %>" class="flex items-center gap-2">
                    <img src="/public/img/logo.svg" alt="Librarium Logo" class="h-8">
                    <span class="text-teal-400 font-bold text-xl">Librarium</span>
                </a>
            </div>
            <div class="hidden md:flex space-x-6 items-center">
                <% if (!user) { %>
                    <a href="/login" class="text-gray-300 hover:text-teal-400 transition-colors duration-300 font-medium">Ingresar</a>
                    <a href="/register" class="bg-teal-600 hover:bg-teal-500 text-gray-900 font-medium py-2 px-4 rounded-md transition-colors duration-300">Registrarse</a>
                <% } else { %>
                    <span class="text-gray-400">Hola, <%= user.name %></span>
                    <a href="/profile" class="text-gray-300 hover:text-teal-400 transition-colors duration-300 font-medium flex items-center gap-1">
                        <i class="fas fa-user-circle"></i>
                        <span>Perfil</span>
                    </a>
                    <a href="/logout" class="bg-red-600 hover:bg-red-500 text-gray-100 font-medium py-2 px-4 rounded-md transition-colors duration-300 flex items-center gap-1">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Salir</span>
                    </a>
                <% } %>
            </div>
        </div>
    </nav>
</header>