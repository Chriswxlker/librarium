<main class="w-full bg-gray-900 text-gray-100">
    <section class="max-w-6xl mx-auto px-4 py-12 w-full">
        <h2 class="text-2xl sm:text-3xl font-bold text-teal-400 mb-10 text-center flex items-center justify-center gap-2">
            <i class="fas fa-tachometer-alt"></i> <%= encabezado %>
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Tarjeta Libros -->
            <div class="bg-gray-800 rounded-xl p-8 text-center border border-gray-700 hover:border-teal-400 transition-all duration-300 shadow-lg hover:shadow-teal-500/20">
                <h3 class="text-xl font-semibold text-teal-300 mb-3 flex items-center justify-center gap-2">
                    <i class="fas fa-book"></i> Libros
                </h3>
                <p class="text-gray-400 mb-6">Gestiona los libros de la biblioteca.</p>
                <a href="/books" class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-6 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30 flex items-center gap-2 justify-center">
                    <i class="fas fa-eye"></i> Ver libros
                </a>
            </div>
            <!-- Tarjeta Categorías -->
            <div class="bg-gray-800 rounded-xl p-8 text-center border border-gray-700 hover:border-teal-400 transition-all duration-300 shadow-lg hover:shadow-teal-500/20">
                <h3 class="text-xl font-semibold text-teal-300 mb-3 flex items-center justify-center gap-2">
                    <i class="fas fa-tags"></i> Categorías
                </h3>
                <p class="text-gray-400 mb-6">Gestiona las categorías de libros.</p>
                <a href="/categories" class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-6 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30 flex items-center gap-2 justify-center">
                    <i class="fas fa-eye"></i> Ver categorías
                </a>
            </div>
            <!-- Tarjeta Editoriales -->
            <div class="bg-gray-800 rounded-xl p-8 text-center border border-gray-700 hover:border-teal-400 transition-all duration-300 shadow-lg hover:shadow-teal-500/20">
                <h3 class="text-xl font-semibold text-teal-300 mb-3 flex items-center justify-center gap-2">
                    <i class="fas fa-building"></i> Editoriales
                </h3>
                <p class="text-gray-400 mb-6">Gestiona las editoriales.</p>
                <a href="/publishers" class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-6 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30 flex items-center gap-2 justify-center">
                    <i class="fas fa-eye"></i> Ver editoriales
                </a>
            </div>
            <!-- Tarjeta Autores -->
            <div class="bg-gray-800 rounded-xl p-8 text-center border border-gray-700 hover:border-teal-400 transition-all duration-300 shadow-lg hover:shadow-teal-500/20">
                <h3 class="text-xl font-semibold text-teal-300 mb-3 flex items-center justify-center gap-2">
                    <i class="fas fa-user-edit"></i> Autores
                </h3>
                <p class="text-gray-400 mb-6">Gestiona los autores.</p>
                <a href="/authors" class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-6 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30 flex items-center gap-2 justify-center">
                    <i class="fas fa-eye"></i> Ver autores
                </a>
            </div>
            <!-- Tarjeta Usuarios (solo admin) -->
            <% if (user && user.role === 'admin') { %>
            <div class="bg-gray-800 rounded-xl p-8 text-center border border-gray-700 hover:border-teal-400 transition-all duration-300 shadow-lg hover:shadow-teal-500/20">
                <h3 class="text-xl font-semibold text-teal-300 mb-3 flex items-center justify-center gap-2">
                    <i class="fas fa-users-cog"></i> Usuarios
                </h3>
                <p class="text-gray-400 mb-6">Gestiona los usuarios del sistema.</p>
                <a href="/users" class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-6 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30 flex items-center gap-2 justify-center">
                    <i class="fas fa-eye"></i> Ver usuarios
                </a>
            </div>
            <% } %>
            <!-- Tarjeta Préstamos -->
            <div class="bg-gray-800 rounded-xl p-8 text-center border border-gray-700 hover:border-teal-400 transition-all duration-300 shadow-lg hover:shadow-teal-500/20">
                <h3 class="text-xl font-semibold text-teal-300 mb-3 flex items-center justify-center gap-2">
                    <i class="fas fa-book-reader"></i> Préstamos
                </h3>
                <p class="text-gray-400 mb-6">Gestiona y solicita préstamos de libros.</p>
                <% if (user && (user.role === 'librarian' || user.role === 'admin')) { %>
                <a href="/loans" class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-6 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30 flex items-center gap-2 justify-center">
                    <i class="fas fa-eye"></i> Ver préstamos
                </a>
                <% } %>
                <% if (user && user.role === 'user') { %>
                <a href="/loans/my" class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-6 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30 flex items-center gap-2 justify-center">
                    <i class="fas fa-eye"></i> Mis préstamos
                </a>
                <a href="/loans/add" class="inline-block bg-teal-700 hover:bg-teal-500 text-gray-100 font-bold py-2 px-6 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30 flex items-center gap-2 justify-center mt-2">
                    <i class="fas fa-plus"></i> Solicitar préstamo
                </a>
                <% } %>
            </div>
        </div>
    </section>
</main>