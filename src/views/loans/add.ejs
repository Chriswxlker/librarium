<h2>Solicitar Préstamo</h2>
<% if (error) { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>
<form action="/loans/add" method="POST">
  <div class="form-group">
    <label for="book_id">Libro</label>
    <select name="book_id" id="book_id" class="form-control" required>
      <% books.forEach(function(book) { %>
        <option value="<%= book.id_book %>"><%= book.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="due_date">Fecha de devolución</label>
    <input type="date" name="due_date" id="due_date" class="form-control" required min="<%= new Date().toISOString().split('T')[0] %>">
  </div>
  <div class="flex justify-between mt-8">
    <a href="/loans/my" class="inline-block bg-gray-700 hover:bg-gray-600 text-gray-300 font-medium py-2 px-6 rounded-lg transition-colors duration-300">Volver</a>
    <button type="submit" class="inline-block bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-2 px-8 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30 flex items-center gap-2">
      <i class="fas fa-paper-plane"></i> Solicitar
    </button>
  </div>
</form>