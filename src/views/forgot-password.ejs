<main class="w-full bg-gray-900 text-gray-100 min-h-screen flex items-center justify-center">
    <section class="w-full max-w-md px-6 py-12">
        <div class="text-center mb-10">
            <h1 class="text-3xl sm:text-4xl font-bold text-teal-400 mb-2">Recuperar contraseña</h1>
            <p class="text-gray-400">Ingresa tu correo electrónico para recuperar tu contraseña</p>
        </div>
        <div class="bg-gray-800 rounded-xl shadow-lg border border-gray-700 p-8">
            <form action="/forgot-password" method="POST" class="space-y-6">
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="bg-green-900/50 text-green-300 px-4 py-3 rounded-md border border-green-700">
                        <%= message %>
                    </div>
                <% } %>
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="bg-red-900/50 text-red-300 px-4 py-3 rounded-md border border-red-700">
                        <%= error %>
                    </div>
                <% } %>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Correo electrónico</label>
                    <input type="email" id="email" name="email" required class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-gray-100" placeholder="tucorreo@ejemplo.com">
                </div>
                <button type="submit" class="w-full bg-teal-600 hover:bg-teal-500 text-gray-900 font-bold py-3 px-4 rounded-lg transition-colors duration-300 shadow-md hover:shadow-teal-500/30">Enviar enlace</button>
            </form>
            <div class="mt-6 text-center">
                <a href="/login" class="text-teal-400 hover:text-teal-300 font-medium transition-colors">Volver al inicio de sesión</a>
            </div>
        </div>
    </section>
</main>
